

<div class="card-form container-md mt-3">
  <div class="row w-100 justify-content-center">
    <div class="col-12">
    <h2 class="text-center">New cocktail:</h2>
      <%= simple_form_for [@cocktail] do |f| %>
        <%= f.input :name %>
        <%= f.input :photo, as: :file %>
        <%= f.submit class: "btn btn-secondary" %>
      <% end %>
    </div>
  </div>
</div>
